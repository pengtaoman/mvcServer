<?xml version="1.0" encoding="UTF-8"?>
<memcached>

   <!-- MEMCACHED缓存配置信息
    client name： MEMCACHED使用的管理缓存的名称
    errorHandler： MEMCACHED缓存发生异常时，指定的异常处理类，可以定制
    socketpool：MEMCACHED管理的SOCKET连接池
              failover
    servers：用于缓存的服务器，多个服务器分布式缓存时，用逗号隔开，比如10.4.124.186:11211,10.4.126.94:11211
    -->
    <client name="mclient" compressEnable="true" defaultEncoding="UTF-8" socketpool="pool">
        <errorHandler>com.alisoft.xplatform.asf.cache.memcached.MemcachedErrorHandler</errorHandler>
    </client>
    <socketpool name="pool" failover="true" initConn="5" minConn="5" maxConn="250" maintSleep="0"
        nagle="false" socketTO="30000" aliveCheck="true">
        <servers>10.4.124.186:11212</servers>
    </socketpool>
    
     
    
    <!-- MEMCACHED缓存对象的过期时间，单位是分钟 ,0表示没有过期时间 -->
    <cache-expiry-minuts>0</cache-expiry-minuts>


	<preloadcache-bean-model application-name="home">
	      <preloadcache-bean id="homepageBO" method="getHomepageDAO"/>
	</preloadcache-bean-model>
	
	<preloadcache-bean-model application-name="home">
	      <preloadcache-bean id="cacheManagerBO" method="preCacheObject"/>
	</preloadcache-bean-model>
	

</memcached>