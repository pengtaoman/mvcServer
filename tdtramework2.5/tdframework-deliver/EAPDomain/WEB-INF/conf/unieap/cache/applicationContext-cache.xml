<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<!--<bean id="CacheManagerImpl"
		class="com.neusoft.unieap.service.cache.impl.JCSCacheManager">
	</bean>

	-->
	
	<bean id="CacheManagerImpl"
		class="com.neusoft.unieap.service.cache.impl.EhCacheManager">
	</bean>
	
	<bean id="SendMegAfterReturningAdvice"
		class="com.neusoft.unieap.service.cache.aop.SendMegAfterReturningAdvice">
	</bean>

	<!--<bean id="CacheMsgReceiveListener"
		class="com.neusoft.unieap.service.cache.distributed.CacheMsgReceiveListener">
	</bean>

	--><bean id="CacheSendMegAdvisor"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice">
			<ref local="SendMegAfterReturningAdvice" />
		</property>
		<property name="patterns">
			<list>
				<value>.*get.*</value>
				<value>.*put.*</value>
				<value>.*remove.*</value>
				<value>.*clear.*</value>
			</list>
		</property>
	</bean>

	<bean id="CacheSendMegAdvised"
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces">
			<value>com.neusoft.unieap.service.cache.ICacheManager</value>
		</property>
		<property name="target">
			<ref local="CacheManagerImpl" />
		</property>
		<property name="interceptorNames">
			<value>CacheSendMegAdvisor</value>
		</property>
	</bean>


</beans>
