<?xml version="1.0" encoding="utf-8"?>
<!--
注意：fixLen,maxLen,displayName以及isNullable是开发时可以改变的属性，其他属性请勿动
	 如果account需要只支持数字类型可以通过配置dataType="number"来实现，但dataType在其它属性中不能自己指定
-->
<basicinfo>
	<data type= "person" style="">
		<property name="id" displayName="ID" visible="false" readOnly="true"/>
		<property name="account" displayName="帐号" isNullable="false" defaultValue="account"/>
		<property name="fullname" displayName="全名" maxLen="32" isNullable="false"/>
		<property name="password" displayName="密码" visible="true" rendererClass="Password" maxLen="32"/>
		<property name="description" displayName="描述" maxLen="255"/>
		<property name="ownerroles" displayName="所属角色" rendererClass="ButtonLabelOwnerRoles" isNullable="false"/>
		<property name="ownerunits" displayName="所属组织单元" maxLen="255" rendererClass="ButtonLabelOwnerUnits"/>
	</data>
	<data type= "role" style="">
		<property name="id" displayName="ID" visible="false" readOnly="true"/>
		<property name="name" displayName="名称" maxLen="32" isNullable="false" defaultValue="Role"/>
		<property name="ownerunitid" displayName="所属组织单元" visible = "true" readOnly="true"/>
		<property name="parentroleid" displayName="父角色" visible="false"  readOnly="true"/>
		<property name="description" displayName="描述" maxLen="255"/>
		<property name="members" displayName="包含人员"  rendererClass="ButtonLabelMembers"/>
	</data>
	<data type= "unit" style="">
		<property name="id" displayName="ID" visible="false" maxLen="32"/>
		<property name="name" displayName="名称" maxLen="32" isNullable="false" defaultValue="Unit"/>
		<property name="leaderroleid" displayName="领导角色" visible = "true" readOnly="true"/>
		<property name="description" displayName="描述" maxLen="255"/>
	</data>
</basicinfo>