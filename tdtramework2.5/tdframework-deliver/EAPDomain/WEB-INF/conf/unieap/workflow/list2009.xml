<?xml version="1.0" encoding="UTF-8"?>
<struts picBase="/unieap/pages/workflow/stylesheet/style2009/">
	<root enable="true" name="用户体验中心" id="experienceCenter"
		titlePic="body_img/experienceCenter/title.png"
		instruction="在体验中心，您将会体验到 UniEAP Workflow 产品的丰富特性以及产品在各个行业的成功应用。">
		<itemindex enable="true" name="电力行业" action="#"
			instruction="UniEAP Workflow 产品在电力行业的应用案例。"
			icon="body_img/experienceCenter/Icon_Ele.gif">
		</itemindex>
		<itemindex enable="true" name="电信行业" action="#"
			instruction="UniEAP Workflow 产品在电信行业的应用案例。"
			icon="body_img/experienceCenter/Icon_Comm.gif">
		</itemindex>
	</root>

	<root enable="true" name="管理中心" id="managementCenter"
		titlePic="body_img/manageCenter/title.png"
		instruction="在管理中心，您可以查看或更改系统的各项配置，管理流程的分类，模板以及实例，设置业务代理，查看工作日历。">
		<item enable="true" name="实例管理"
			icon="body_img/manageCenter/Icon_InstManage.gif"
			instruction="管理所有正在进行的流程，查看已经完成的流程。">
			<index enable="false"
				name="workflow.action.index.createnewproc" action="procdeflist.do" />
			<index enable="true"
				name="workflow.action.index.runningproc"
				action="procinst.do?state=15&amp;op=all" />
			<index enable="true"
				name="workflow.action.index.completeproc"
				action="procinst.do?state=48&amp;op=monitor" />
		</item>
		<item enable="true" name="资源管理"
			icon="body_img/manageCenter/Icon_TemplateManage.gif"
			instruction="对工作流程的各类模板进行维护。包括流程模板，节点模板以及应用程序模板。">
			<index enable="true" name="流程模板"
				action="m_category.do?method=categoryManager" />
			<index enable="true" name="节点模版"
				action="act_templet.do?method=templetManager" />
			<index enable="true" name="应用程序"
				action="application.do?method=applicationManager" />
		</item>
		<item enable="true" name="系统管理"
			icon="body_img/manageCenter/Icon_SysManage.gif"
			instruction="对系统进行设置，包括对流程设计器，表单的授权控制，业务代理人设置以及工作日历。">
			<index enable="false" name="表单授权"
				action="procmonitorlist.do" />
			<index enable="true" name="workflow.action.index.sysagent"
				action="agentlist.do" />
			<index enable="true" name="workflow.action.index.schedule"
				action="scheduleAction.do" />
		</item>
		<item enable="true" name="个人管理"
			icon="body_img/manageCenter/Icon_PersonalManage.gif"
			instruction="与个人工作相关的设置。包括任务代理人，任务到达的通知方式。">
			<index enable="true" name="workflow.action.index.myagent"
				action="agentlist_mine.do" />
			<index enable="true" name="workflow.action.index.notify"
				action="notifypref.do" />

		</item>
	</root>
	<root enable="true" name="任务中心" id="taskCenter"
		titlePic="body_img/taskCenter/title.png"
		instruction="任务中心是您日常工作的中心，在这里您可以找到您需要处理的工作，查看已经完成的工作和临时搁置的工作。">
		<itemindex enable="true"
			name="workflow.action.index.runningtask"
			action="allwork.do?state=6&amp;op=all"
			icon="body_img/taskCenter/Icon_taskToDo.gif"
			instruction="包含您需要处理的工作。" />
		<itemindex enable="true"
			name="workflow.action.index.completetask"
			action="allwork.do?state=48&amp;op=complete"
			icon="body_img/taskCenter/Icon_taskFinished.gif"
			instruction="查看已经完成的工作。" />
		<itemindex enable="true"
			name="workflow.action.index.suspendtask"
			action="allwork.do?state=8&amp;op=suspend"
			icon="body_img/taskCenter/Icon_taskSuspend.gif"
			instruction="查看暂时挂起的任务。" />

	</root>

</struts>