<?xml version="1.0" encoding="UTF-8"?>

<!-- 配置工作流产品定时服务信息
	name：定时服务名		-->
<timer name="timer">
	<!-- 配置工作流产品超时服务信息
		enable：是否开启超时检查服务
		interval：超时检查服务在无处理任务时的间歇时间,单位秒
		name：超时服务名
		maxThreads：超时服务使用的最大处理线程数
		minThreads：超时服务使用的最小处理线程数 -->
	
    <timeChecker enable="false" interval="10" name="overtimeChecker"
		minThreads="10" maxThreads="30">
	</timeChecker>
	<!-- 配置工作流产品数据库归档服务信息
		enable：是否开启数据库归档服务
		interval：数据库归档服务在无处理任务时的间歇时间，单位分钟
		name：数据库归档服务名	-->
		
	<archiver enable="false" interval="1" name="archiver"/>
</timer>
