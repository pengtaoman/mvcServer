<?xml version = "1.0" encoding = "UTF-8"?>
<control>

   <logs>
      <logsystem type="com.neusoft.uniecs.logimpl.Log4jCategories" />
      <category id="default">
         <file>d:/log1</file>
         <append>true</append>
         <pattern>%l >> %m%n</pattern>
         <maxfilesize>10KB</maxfilesize>
         <maxbackupindex>2</maxbackupindex>
         <console>true</console>
      </category>
   </logs>

   <default>
      <scheme>0</scheme>
      <category>default</category>
   </default>

</control>