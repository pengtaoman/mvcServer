<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<description>quartz job book</description>	

	<bean id="bookJob"
		class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.neusoft.tdframework.quartz.demojob.BookingOrderUpdateJob" />
		<property name="group" value="server1" />
	</bean>	
	<bean id="bookCronTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="bookJob" />
		<property name="name" value="bookTrigger" />
		<property name="group" value="server1" />
		<property name="cronExpression" value="0 0 1/1 * * ?" />
	</bean>	
	<bean id="bookScheduler"
		class="com.neusoft.tdframework.quartz.scheduler.TdSchedulerFactoryBean" >
		
		<property name="autoStartup" value="false" />
		<property name="waitForJobsToCompleteOnShutdown" value="true" />
		<property name="configLocation"
			value="classpath:quartz-tddemo.properties" />
		<property name="startupDelay" value="10"/>
		<property name="triggers">
			<list>
				<ref bean="bookCronTrigger" />
			</list>
		</property>
		<property name="schedulerName" value="bookScheduler"/>
	</bean>	
</beans>